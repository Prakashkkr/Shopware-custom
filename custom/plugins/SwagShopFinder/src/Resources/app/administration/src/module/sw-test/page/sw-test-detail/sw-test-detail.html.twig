{% block sw_test_detail %}
    <sw-page class="sw-test-detail">

        {% block sw_test_detail_header %}
            <template #smart-bar-header>
                <h2>{{ placeholder(test, 'name', $tc('sw-test.detail.textHeadline')) }}</h2>
            </template>

        {% endblock %}

        {% block sw_test_detail_actions %}
            <template #smart-bar-actions>

                {% block sw_test_detail_actions_abort %}
                    <sw-button
                            v-tooltip.bottom="tooltipCancel"
                            :disabled="testIsLoading"
                            @click="onCancel">
                        {{ $tc('sw-test.detail.buttonCancel') }}
                    </sw-button>
                {% endblock %}

                {% block sw_test_detail_actions_save %}
                    <sw-button-process
                            v-model="isSaveSuccessful"
                            v-tooltip.bottom="tooltipSave"
                            class="sw-test-detail__save-action"
                            :is-loading="isLoading"
                            :disabled="isLoading || !acl.can('swag_shop_finder.editor')"
                            variant="primary"
                            @click.prevent="onSave">
                        {{ $tc('sw-test.detail.buttonSave') }}
                    </sw-button-process>
                {% endblock %}

            </template>
        {% endblock %}

        {% block sw_test_detail_language_switch %}
            <template #language-switch>
                <sw-language-switch
                        :disabled="testId == null"
                        :save-changes-function="saveOnLanguageChange"
                        :abort-change-function="abortOnLanguageChange"
                        @on-change="onChangeLanguage"></sw-language-switch>
            </template>
        {% endblock %}

        {% block sw_test_detail_content %}
            <sw-card-view slot="content">
                <template v-if="testIsLoading">
                    <sw-skeleton variant="detail-bold" />
                    <sw-skeleton />
                </template>

                <template v-else>

                    {% block sw_test_detail_content_language_info %}
                        <sw-language-info
                                :entity-description="placeholder(test, 'name', $tc('sw-test.detail.textHeadline'))"
                        />
                    {% endblock %}

                    {% block sw_test_detail_base_basic_info_card %}
                        <sw-card
                                position-identifier="sw-test-detail-basic-info"
                                :title="$tc('sw-test.detail.cardTitletestInfo')"/>
                            <sw-container
                                    class="sw-test-detail__container"
                                    columns="repeat(auto-fit, minmax(250px, 1fr))"
                                    gap="0 30px">

                                <div class="sw-test-detail__base-info-wrapper">

                                    {% block sw_test_detail_base_info_field_name %}
                                        <sw-field
                                                v-model="test.name"
                                                type="text"
                                                :label="$tc('sw-test.detail.labelName')"
                                                :placeholder="placeholder(test, 'name', $tc('sw-test.detail.placeholderName'))"
                                                name="name"
                                                validation="required"
                                                required
{#                                                :error="testNameError"#}
                                                :disabled="!acl.can('swag_shop_finder.editor')"
                                        />
                                    {% endblock %}

                                    {% block sw_test_detail_base_info_field_course %}
                                        <sw-field
                                                v-model="test.course"
                                                type="text"
                                                :label="$tc('sw-test.detail.labelCourse')"
                                                :placeholder="placeholder(test, 'course', $tc('sw-test.detail.placeholderCourse'))"
                                                name="course"
                                                validation="required"
                                                required
{#                                                :error="testCourseError"#}
                                                :disabled="!acl.can('swag_shop_finder.editor')"
                                        />
                                    {% endblock %}

                                    {% block sw_test_detail_base_info_field_description %}
                                        <sw-field
                                                v-model="test.description"
                                                type="text"
                                                :label="$tc('sw-test.detail.labelDescription')"
                                                :placeholder="placeholder(test, 'description', $tc('sw-test.detail.placeholderDescription'))"
                                                name="description"
                                                validation="required"
                                                required
{#                                                :error="testDescriptionError"#}
                                                :disabled="!acl.can('swag_shop_finder.editor')"
                                        />
                                    {% endblock %}
                                    {% block sw_test_detail_base_info_field_mobile_no %}
                                        <sw-field
                                                v-model="test.mobile_no"
                                                type="text"
                                                :label="$tc('sw-test.detail.labelMobile_no')"
                                                :placeholder="placeholder(test, 'mobile_no', $tc('sw-test.detail.placeholderMobile_no'))"
                                                name="mobile_no"
                                                validation="required"
                                                required
{#                                                :error="testMobile_noError"#}
                                                :disabled="!acl.can('swag_shop_finder.editor')"
                                        />
                                    {% endblock %}
                                </div>
                            </sw-container>
                        </sw-card>
                    {% endblock %}

                    {% block sw_test_detail_custom_field_sets %}
                        <sw-card
                                v-if="customFieldSets.length > 0"
                                position-identifier="sw-test-detail-custom-field-sets"
                                :title="$tc('sw-settings-custom-field.general.mainMenuItemGeneral')"
                                :is-loading="testIsLoading"
                        >
{#                            <sw-custom-field-set-renderer#}
{#                                    v-if="test"#}
{#                                    :entity="swag_shop_finder"#}
{#                                    :sets="customFieldSets"#}
{#                                    :disabled="!acl.can('swag_shop_finder.editor')"#}
{#                            />#}
                        </sw-card>
                    {% endblock %}
                </template>
            </sw-card-view>
        {% endblock %}

        {% block sw_test_detail_sidebar %}
            <template slot="sidebar">
                <sw-sidebar :propagate-width="true">
                    <sw-sidebar-media-item
                            ref="mediaSidebarItem"
                            :disabled="!acl.can('swag_shop_finder.editor')"
                    >
                        <template
                                slot="context-menu-items"
                                slot-scope="media"
                        >
                            <sw-context-menu-item @click="setMediaFromSidebar(media.mediaItem)">
                                {{ $tc('sw-test.detail.labelUseAsLogo') }}
                            </sw-context-menu-item>
                        </template>
                    </sw-sidebar-media-item>
                </sw-sidebar>
            </template>
        {% endblock %}
    </sw-page>
{% endblock %}
