{% block sw_test_detail %}
    <sw-page class="sw-test-detail">

        {% block sw_test_detail_header %}
            <template #smart-bar-header>
                <h2>{{ placeholder(test, 'name', $tc('sw-test.detail.textHeadline')) }}</h2>
            </template>

        {% endblock %}

        {% block sw_test_detail_actions %}
            <template #smart-bar-actions>

                {% block sw_test_detail_actions_abort %}
                    <sw-button
                            v-tooltip.bottom="tooltipCancel"
                            :disabled="testIsLoading"
                            @click="onCancel"
                    >
                        {{ $tc('sw-test.detail.buttonCancel') }}
                    </sw-button>
                {% endblock %}

                {% block sw_test_detail_actions_save %}
                    <sw-button-process
                            v-model="isSaveSuccessful"
                            v-tooltip.bottom="tooltipSave"
                            class="sw-test-detail__save-action"
                            :is-loading="isLoading"
                            :disabled="isLoading || !acl.can('swag_ship_finder.editor')"
                            variant="primary"
                            @click.prevent="onSave"
                    >
                        {{ $tc('sw-test.detail.buttonSave') }}
                    </sw-button-process>
                {% endblock %}

            </template>
        {% endblock %}

        {% block sw_test_detail_language_switch %}
            <template #language-switch>
                <sw-language-switch
                        :disabled="testId == null"
                        :save-changes-function="saveOnLanguageChange"
                        :abort-change-function="abortOnLanguageChange"
                        @on-change="onChangeLanguage"
                />
            </template>
        {% endblock %}

        {% block sw_test_detail_content %}
            <sw-card-view slot="content">
                <template v-if="testIsLoading">
                    <sw-skeleton variant="detail-bold" />
                    <sw-skeleton />
                </template>

                <template v-else>

                    {% block sw_test_detail_content_language_info %}
                        <sw-language-info
                            :entity-description="placeholder(test, 'name', $tc('sw-test.detail.textHeadline'))"
                        />
                    {% endblock %}

                    {% block sw_test_detail_base_basic_info_card %}
                        <sw-card
                                position-identifier="sw-test-detail-basic-info"
                                :title="$tc('sw-test.detail.cardTitletestInfo')"
                        >
                            <sw-container
                                    class="sw-test-detail__container"
                                    columns="repeat(auto-fit, minmax(250px, 1fr))"
                                    gap="0 30px"
                            >
                                <div class="sw-test-detail__base-info-wrapper">

                                    {% block sw_test_detail_base_info_field_name %}
                                        <sw-field
                                                v-model="test.name"
                                                type="text"
                                                :label="$tc('sw-test.detail.labelName')"
                                                :placeholder="placeholder(test, 'name', $tc('sw-test.detail.placeholderName'))"
                                                name="name"
                                                validation="required"
                                                required
{#                                                :error="testNameError"#}
                                                :disabled="!acl.can('swag_ship_finder.editor')"
                                        />
                                    {% endblock %}

                                    {% block sw_test_detail_base_info_field_city %}
                                        <sw-field
                                                v-model="test.city"
                                                type="text"
                                                :label="$tc('sw-test.detail.labelCity')"
                                                :placeholder="placeholder(test, 'city', $tc('sw-test.detail.placeholderCity'))"
                                                city="city"
                                                validation="required"
                                                required
{#                                                :error="testCityError"#}
                                                :disabled="!acl.can('swag_ship_finder.editor')"
                                        />
                                    {% endblock %}

                                    {% block sw_test_detail_country_field %}
                                        <sw-entity-single-select
                                            v-model="test.countryId"
                                            class="sw-test-detail_country-select"
                                            entity="country"
                                            :criteria="countryCriteria"
                                            :label="$tc('sw-test.detail.labelCountryId')"
                                            :placeholder="$tc('sw-test.detail.placeholderCountry')"
                                            validation="required"
                                            required
{#                                            :error="testCountryIdError"#}
                                            :disabled="!acl.can('swag_ship_finder.editor')"
                                            show-clearable-button
                                        />
                                    {% endblock %}

                                    {% block sw_test_detail_state_field %}
                                        <div
{#                                            v-if="countryId && hasStates"#}
                                            class="sw-test-detail__state-select-placeholder"
                                        >
                                            <sw-entity-single-select
                                                v-model="test.countryStateId"
                                                class="sw-test-detail__state-select"
                                                entity="country_state"
                                                :criteria="stateCriteria"
                                                :label="$tc('sw-test-detail.labelState')"
                                                :placeholder="$tc('sw-test-detail.placeholderState')"
                                                :required="country && country.forceStateInRegistration"
{#                                                :error="testCountryStateIdError"#}
                                                :disabled="!acl.can('swag_ship_finder.editor')"
                                                show-clearable-button
                                            />
                                        </div>
                                    {% endblock %}

                                    {% block sw_test_detail_logo_upload %}
                                        <sw-upload-listener
                                            :upload-tag="mediaUploadTag"
                                            auto-upload
                                            @media-upload-finish="setMediaItem"
                                        />
                                        <sw-media-upload-v2
                                            class="sw-test-detail__logo-upload"
                                            :source="test.mediaId"
                                            :allow-multi-select="false"
                                            variant="regular"
                                            :upload-tag="mediaUploadTag"
                                            :label="$tc('sw-test.detail.labelLogo')"
                                            :default-folder="testRepository.entityName"
                                            :disabled="!acl.can('swag_ship_finder.editor')"
                                            @sw-media-upload-v2-media-upload-success="setMediaItem"
                                            @media-drop="onDropMedia"
                                            @media-upload-sidebar-open="openMediaSidebar"
                                            @media-upload-remove-image="onUnlinkLogo"
                                        />
                                    {% endblock %}
                                    {#                            </sw-container>#}

                                    {% block sw_test_detail_base_info_field_productId %}
                                        <sw-entity-single-select
                                            v-model="test.productId"
                                            class="sw-test-detail__product_select"
                                            entity="product"
                                            :criteria="productCriteria"
                                            :label="$tc('sw-test-detail.labelState')"
                                            :placeholder="$tc('sw-test-detail.placeholderState')"
                                            show-clearable-button
                                        />
                                    {% endblock %}

                                </div>
                            </sw-container>




                        </sw-card>
                    {% endblock %}

                    {% block sw_test_detail_custom_field_sets %}
                        <sw-card
                                v-if="customFieldSets.length > 0"
                                position-identifier="sw-test-detail-custom-field-sets"
                                :title="$tc('sw-settings-custom-field.general.mainMenuItemGeneral')"
                                :is-loading="testIsLoading"
                        >
                            <sw-custom-field-set-renderer
                                    v-if="test"
                                    :entity="test"
                                    :sets="customFieldSets"
                                    :disabled="!acl.can('swag_ship_finder.editor')"
                            />
                        </sw-card>
                    {% endblock %}
                </template>
            </sw-card-view>
        {% endblock %}

        {% block sw_test_detail_sidebar %}
            <template slot="sidebar">
                <sw-sidebar :propagate-width="true">
                    <sw-sidebar-media-item
                            ref="mediaSidebarItem"
                            :disabled="!acl.can('swag_ship_finder.editor')"
                    >
                        <template
                                slot="context-menu-items"
                                slot-scope="media"
                        >
                            <sw-context-menu-item @click="setMediaFromSidebar(media.mediaItem)">
                                {{ $tc('sw-test.detail.labelUseAsLogo') }}
                            </sw-context-menu-item>
                        </template>
                    </sw-sidebar-media-item>
                </sw-sidebar>
            </template>
        {% endblock %}

    </sw-page>
{% endblock %}
