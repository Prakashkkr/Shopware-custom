{% block sw_test_list %}
    <sw-page class="sw-test-list">
        {% block sw_test_list_search_bar %}
            <template #search-bar>
                <sw-search-bar
                        initial-search-type="test"
                        :initial-search="term"
                        @search="onSearch"
                />
            </template>
        {% endblock %}

        {% block sw_test_list_smart_bar_header %}
            <template #smart-bar-header>
                {% block sw_test_list_smart_bar_header_title %}
                    <h2>
                        {% block sw_test_list_smart_bar_header_title_text %}
                            {{ $tc('sw-test.list.texttestOverview') }}
                        {% endblock %}

                        {% block sw_test_list_smart_bar_header_amount %}
                            <span
                                    v-if="!isLoading"
                                    class="sw-page__smart-bar-amount"
                            >
                ({{ total }})
            </span>
                        {% endblock %}
                    </h2>
                {% endblock %}
            </template>
        {% endblock %}

        {% block sw_test_list_actions %}
            <template #smart-bar-actions>
                {% block sw_test_list_smart_bar_actions %}
                    <sw-button
                            v-tooltip.bottom="{
                message: $tc('sw-privileges.tooltip.warning'),
                disabled: acl.can('swag_shop_finder.creator'),
                showOnDisabledElements: true
            }"
                            :router-link="{ name: 'sw.test.create' }"
                            :disabled="!acl.can('swag_shop_finder.creator')"
                            class="sw-test-list__add-test"
                            variant="primary"
                    >
                        {{ $tc('sw-test.list.buttonAddtest') }}
                    </sw-button>
                {% endblock %}
            </template>
        {% endblock %}

        <!-- eslint-disable-next-line sw-deprecation-rules/no-twigjs-blocks -->
        {% block sw_test_list_language_switch %}
            <template #language-switch>
                <sw-language-switch @on-change="onChangeLanguage" />
            </template>
        {% endblock %}

        <template #content>
            <!-- eslint-disable-next-line sw-deprecation-rules/no-twigjs-blocks -->
            {% block sw_test_list_content %}
                <div class="sw-test-list__content">
                    <!-- eslint-disable-next-line sw-deprecation-rules/no-twigjs-blocks -->
                    {% block sw_test_list_grid %}
                        <sw-entity-listing
                                v-if="entitySearchable"
                                class="sw-test-list__grid"
                                detail-route="sw.test.detail"
                                :is-loading="isLoading"
                                :columns="testColumns"
                                :repository="testRepository"
                                :items="tests"
                                :criteria-limit="limit"
                                :sort-by="currentSortBy"
                                :sort-direction="sortDirection"
                                :disable-data-fetching="true"
                                :allow-edit="acl.can('swag_shop_finder.editor')"
                                :allow-inline-edit="acl.can('swag_shop_finder.editor')"
                                :allow-delete="acl.can('swag_shop_finder.deleter')"
                                :show-selections="acl.can('swag_shop_finder.deleter')"
                                identifier="sw-test-list"
                                @update-records="updateTotal"
                                @page-change="onPageChange"
                                @column-sort="onSortColumn"
                        >
                            <!-- eslint-disable-next-line sw-deprecation-rules/no-twigjs-blocks -->
                            {% block sw_test_list_grid_columns_name_preview %}
                                <template #preview-name="{ item }">
                                    <sw-media-preview-v2 :source="item.mediaId" />
                                </template>
                            {% endblock %}
                        </sw-entity-listing>
                    {% endblock %}

                    <!-- eslint-disable-next-line sw-deprecation-rules/no-twigjs-blocks -->
                    {% block sw_test_list_empty_state %}
                        <sw-empty-state
                                v-if="!isLoading && !total && isValidTerm(term)"
                                :title="$tc('sw-empty-state.messageNoResultTitle')"
                        >
                            <template #default>
                                {{ $tc('sw-empty-state.messageNoResultSublineBefore') }}
                                <router-link
                                        class="sw-empty-state__description-link"
                                        :to="{ name: 'sw.profile.index.searchPreferences' }"
                                >
                                    {{ $tc('sw-empty-state.messageNoResultSublineLink') }}
                                </router-link>
                                {{ $tc('sw-empty-state.messageNoResultSublineAfter') }}
                            </template>
                        </sw-empty-state>
                    {% endblock %}

                    {# @deprecated tag:v6.5.0 - Will be removed #}
                    <!-- eslint-disable-next-line sw-deprecation-rules/no-twigjs-blocks -->
                    {% block sw_test_list_grid_loader %}{% endblock %}
                </div>
            {% endblock %}

        </template>
    </sw-page>
{% endblock %}
